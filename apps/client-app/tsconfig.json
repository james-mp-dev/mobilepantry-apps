{
  "extends": "@mobilepantry/config/tsconfig.base.json",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-native",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "lib": ["ESNext"],
    "target": "ESNext"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "App.tsx",
    "nativewind-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js", 
    "tailwind.config.js"
  ]
}
